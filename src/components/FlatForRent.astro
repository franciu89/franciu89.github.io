---
import "../styles/flat-for-rent.css";
import Carousel from "./Carousel.tsx";

const galleryImages = [
  "/assets/building-1.jpg",
  "/assets/common-garden.jpg",
  "/assets/floorplan.jpg",
];
const features = [
  { label: "Bedrooms", value: "1" },
  { label: "Bathrooms", value: "1" },
  { label: "Size", value: "60 m²" },
  { label: "Floor", value: "1st" },
];

const description = `A bright 1-bedroom furnished flat located in Glasgow West End. Spacious living area, and a fully equipped kitchen. Close to public transport, shops, and parks. Ideal for professionals.

Let available date: September 2025

Let type: long term

Deposit: £1,050

Council Tax: Band B

Utilities: Not included

Pets: not allowed.

Smoking: not allowed.

Parking: street parking available, with a resident permit required.

Note: the floorplan is indicative only and may not represent the exact layout of the flat.`;

const price = "£850/month";
---

<section class="flat-hero">
  <h1>1-Bedroom Flat for Rent</h1>
  <p class="flat-price">{price}</p>
</section>

<section class="flat-gallery">
  <h2>Gallery</h2>
  <Carousel galleryImages={galleryImages} client:load />
</section>

<section class="flat-features">
  <h2>Key Features</h2>
  <ul>
    {
      features.map((f) => (
        <li>
          <strong>{f.label}:</strong> {f.value}
        </li>
      ))
    }
  </ul>
</section>

<section class="flat-description">
  <h2>Description</h2>
  <p>{description}</p>
</section>
